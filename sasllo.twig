<!DOCTYPE html>
<html lang="de">
<head>
<title>Export</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css">
<style>
    @media print {
        .card {
            break-inside: avoid;
        }
    }
    .container {
        max-width: 620px !important;
    }

    .content h1 {
        display: none;
    }

    .label {
        min-width: 130px;
    }
</style>
</head>
<body>
<div class="container">
    {% set organizationName = '' %}
    {% set boardName = '' %}
    {% set prevList = '' %}
    {% for card in data.cards %}
        {% set theLink = '' %}
        {% if card.boardName != boardName %}
            <h1 class="title mt-6">{{ card.boardName }}</h1>
        {% endif %}
        {% set boardName = card.boardName %}
        {% set organizationName = card.organizationName %}
        {% set curList = card.listName %}
        {% if prevList != curList %}
            <h2 class="subtitle">{{ curList }}</h2>
        {% endif %}
        {% set prevList = card.listName %}
        {# find attachment which is an URL and set to variable 'theLink' #}
        {% if card.jsonAttachments|length > 0 %}
            {% for attach in card.jsonAttachments %}
                {% if not attach.isUpload %}
                {% if theLink is empty %}
                {% set theLink = attach.url %}
                {% endif %}
                {% endif %}
            {% endfor %}        
        {% endif %}
        <div class="card mb-6">
            {% if card.jsonAttachments|length > 0 %}
            <div class="card-image">
                <div class="swiper">
                    <div class="swiper-wrapper">
                    {% for attach in card.jsonAttachments %}
                        {% if attach.previews|length > 0 %}
                        <div class="swiper-slide">
                            <figure class="image is-square">
                                <img width="540" src="{{ attach.previews|last.url }}">
                            </figure>
                        </div>
                        {% endif %}
                    {% endfor %}
                    </div>
                    <div class="swiper-pagination"></div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </div>
            {% endif %}
            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                        <p class="title is-4">{{ card.title }}</p>
                    </div>
                </div>
                <div class="content">
                {{ card.cardDescription }}
                </div>
            </div>
            <footer class="card-footer">
                <div class="card-footer-item is-align-items-flex-start is-justify-content-flex-start">
                    <span class="label mr-3">Datum:</span>
                    <span class="text"><time datetime="{{ card.due }}">{{ card.due }}</time></span>
                </div>
            </footer>
            {% if card.customFields|length > 0 %}
                {% for field in card.customFields %}
                <footer class="card-footer">
                    <div class="card-footer-item is-align-items-flex-start is-justify-content-flex-start">
                        <span class="label mr-3">{{ field.name }}:</span>
                        <span class="text">{{ field.value }}</span>
                    </div>
                </footer>
                {% endfor %}
            {% endif %}
        </div>  
    {% endfor %}
</div>
<script>
    const stringsToRemove = [
        " (Mitteleurop�ische Sommerzeit)",
        "�",
        "�",
        "�"
    ];

    const allTags = document.getElementsByTagName('*');
    for (let i = 0; i < allTags.length; i++) {
        const tag = allTags[i];

        for (let j = 0; j < tag.childNodes.length; j++) {
            const node = tag.childNodes[j];

            if (node.nodeType === Node.TEXT_NODE) {
                let originalText = node.textContent;

                for (const stringToRemove of stringsToRemove) {
                    originalText = originalText.replace(stringToRemove, '');
                }

                node.textContent = originalText;
            }
        }
    }

    const aTags = document.querySelectorAll('a');
    aTags.forEach(aTag => {
        let hrefValue = aTag.getAttribute('href');

        if (hrefValue && hrefValue.includes(' "smartCard-inline"')) {
            hrefValue = hrefValue.replace(' "smartCard-inline"', '');
            aTag.setAttribute('href', hrefValue);
        }
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script>
const swiper = new Swiper('.swiper', {
  loop: true,
  pagination: {
    el: '.swiper-pagination',
  },
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },
});
</script>
</body>
</html>